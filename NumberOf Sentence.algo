ALGORITHM NumberOfSentence
VAR
   ch : chaine de caractere
   count , i : entier
BEGIN
   lire (ch);
   pour i = 0 ;ch[i] =!'\0';i++
   {
        if (ch[i] == ' ' && ch[i+1] != ' ')
            count++; 
        endif   
    }
    endpour
    ecrire("Number of words in given string are: %d\n", count + 1);
}
END
