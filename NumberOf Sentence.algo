ALGORITHM NumberOfVowels
VAR
   s : chaine de caractere
   count , i ,c: entier
   c = 0;
BEGIN
 lire("Input a string\n");
 ecrire(ch);

  while (s[ch] != '\0') {
    if (s[c] == 'a' || s[c] == 'A' || s[c] == 'e' || s[c] == 'E' || s[c] == 'i' || s[c] == 'I' || s[c] =='o' || s[c]=='O' || s[c] == 'u' || s[c] == 'U')
      count++;
    c++;
  }

  printf("Number of vowels in the string: %d", count);

}
END